
{
   "controller": {
     "id": "tetry"
   },
   "workers": [
      {
         "type": "router",
         "options": {
            "pythonpath": ["..", "../web_frontend"]
         },
         "realms": [
            {
               "name": "realm1",
               "roles": [
                  {
                     "name": "anonymous",
                     "permissions": [
                        {
                           "uri": "*",
                           "publish": true,
                           "subscribe": true,
                           "call": true,
                           "register": true
                        }
                     ]
                  }
               ]
            }
         ],
         "transports": [
            {
               "type": "web",
               "endpoint": {
                  "type": "tcp",
                  "port": 8080
               },
               "paths": {
                  "/": {
                     "type": "wsgi",
                     "module": "flask_runner",
                     "object": "app"
                  },
                  "js": {
                     "type": "static",
                     "directory": "../web_frontend/static/js"
                  },
                  "css": {
                     "type": "static",
                     "directory": "../web_frontend/static/css"
                  },
                  "fonts": {
                     "type": "static",
                     "directory": "../web_frontend/static/fonts"
                  },
                  "meta": {
                     "type": "static",
                     "directory": "../web_frontend/metaapi"
                  },
                  "ws": {
                     "type": "websocket"
                  }
               }
            }
         ]
      },
      {
         "type": "container",
         "options": {
            "pythonpath": [".."]
         },
         "components": [
            {
              "id": "EventCatcher",
              "type": "class",
               "classname": "event_catcher.EventCatcher",
               "realm": "realm1",
               "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
               }
            }
         ]
      },
      {
         "type": "container",
         "options": {
            "pythonpath": ["../queue"]
         },
         "components": [
            {
              "id": "Queue",
              "type": "class",
               "classname": "queue.CommandQueue",
               "realm": "realm1",
               "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
               }
            }
         ]
      },
      {
         "type": "container",
         "options": {
            "pythonpath": [".."]
         },
         "components": [
            {
               "id": "PhysicalModel",
               "type": "class",
               "classname": "physical_model.PhysicalModel",
               "extra":
                {
                 "legs": [
                  {
                   "temur": 45,
                   "coxa": 85,
                   "name": "FR leg",
                   "offset": [25, 25],
                   "debug": false,
                   "initial_state": [55, 55, 40],
                   "servos": [0,1,2],
                   "id": "FR_leg",
                   "tibia": 85
                  },
                  {
                   "temur": 45,
                   "coxa": 85,
                   "name": "BR leg",
                   "offset": [25,-25],
                   "debug": false,
                   "initial_state": [55,-55,40],
                   "servos": [6,7,8],
                   "id": "BR_leg",
                   "tibia": 85
                  },
                  {
                   "temur": 45,
                   "coxa": 85,
                   "name": "BL leg",
                   "offset": [-25,-25],
                   "debug": false,
                   "initial_state": [-55,-55,40],
                   "servos": [9,10,11],
                   "id": "BL_leg",
                   "tibia": 85
                  },
                  {
                   "temur": 45,
                   "coxa": 85,
                   "name": "FL leg",
                   "offset": [-25,25],
                   "debug": false,
                   "initial_state": [-55,55,40],
                   "servos": [3,4,5],
                   "id": "FL_leg",
                   "tibia": 85
                  }
                 ],
                 "inverted": [2,5,8,11],
                 "protocol": "Custom tetry"
                },
           "realm": "realm1",
               "transport": {
                  "type": "websocket",
                  "endpoint": {
                     "type": "tcp",
                     "host": "127.0.0.1",
                     "port": 8080
                  },
                  "url": "ws://127.0.0.1:8080/ws"
               }
            }
         ]
      },
      {
         "type": "container",
         "options": {
            "pythonpath": [".."]
